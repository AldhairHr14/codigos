<?php
if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    $nombre = htmlspecialchars($_POST['nombre']);
    $correo = filter_var($_POST['correo'], FILTER_SANITIZE_EMAIL);
    $fecha = $_POST['fecha'];
    $hora = $_POST['hora'];
    $personas = intval($_POST['personas']);

    // Validaci√≥n b√°sica
    if ($nombre && $correo && $fecha && $hora && $personas > 0) {
        echo "<p>Reservaci√≥n completada para $nombre el $fecha a las $hora para $personas personas.</p>";
    } else {
        echo "<p>Por favor completa todos los campos correctamente.</p>";
    }
}
?>
